swiper,
swiper image {
  width: 100%;
  height: 460rpx;
}

.posts-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding: 10rpx 0;

}

.posts-user {
  display: flex;
  align-items: center;
  margin: 10rpx 0 20rpx 10rpx;
}

.posts-user image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.posts-user text {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.posts-title {
  margin: 0 0 20rpx 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.posts-img {
  width: 100%;
  height: 500rpx;
}

.posts-content {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 20rpx 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.posts-bottom {
  display: flex;
  align-items: center;
}

.posts-bottom .l-icon {
  font-size: 26rpx !important;
  margin: 0 10rpx;
}

.posts-bottom text {
  font-size: 24rpx;
  margin-right: 20rpx;
}