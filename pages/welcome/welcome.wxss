.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin-top: 160rpx;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.msg {
  margin: 100rpx 0 200rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.traval {
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  text-align: center;
}

.traval-text {
  font-size: 22rpx;
  color: #405f80;
  line-height: 80rpx;
  font-weight: bold;
}

